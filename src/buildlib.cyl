{ return 1; }
| '}'
{ return 0; }
| eof
{ fprintf(stderr,
          "Error in .cys file: unexpected end-of-file\n");
  return 0; }
| _
{ fprintf(stderr,
          "Error in .cys file: expected symbol, found '%c' instead\n",
          lexeme_char(lexbuf,0));

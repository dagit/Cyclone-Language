  eof
{ log("Warning: unclosed brace\n"); return 0; }
| '}'
{ if (braces_to_match == 1) return 0;
  braces_to_match--;
  Buffer::add_char((Buffer::T)specbuf,'}');
  return 1; }
| '{'
{ braces_to_match++;
  Buffer::add_char((Buffer::T)specbuf,'{');

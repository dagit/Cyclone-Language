| '"'
{ Buffer::add_char((Buffer::T)specbuf,'"');
  while (block_string(lexbuf)) /* skip */;
  return 1; }
| "/*"
{ Buffer::add_string((Buffer::T)specbuf,"/*");
  while (block_comment(lexbuf)) /* skip */;
